.container
  .row
    %label Name:
    %input{"ng-model" => "filterbox", :placeholder => "Enter a name here", :type => "text"}

  %div{"ng-controller" => "SalmonCtrl"}
    %ul
      %li{"ng-repeat" => "salmon in salmon | filter:filterbox"}
        %h3 {{salmon.common_name}}
        %p {{salmon.species}}


